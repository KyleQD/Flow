# Tourify Production Environment Configuration
# =============================================

# Core Application
NODE_ENV=production
NEXT_PUBLIC_SITE_URL=https://tourify.live
DOMAIN=https://tourify.live
PORT=3000

# Supabase Configuration (your existing setup)
NEXT_PUBLIC_SUPABASE_URL=https://auqddrodjezjlypkzfpi.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Authentication
NEXTAUTH_URL=https://tourify.live
NEXTAUTH_SECRET=your_nextauth_secret_here

# Demo Mode Configuration
NEXT_PUBLIC_DEMO_MODE=false
NEXT_PUBLIC_DEMO_DATA_ENABLED=true

# Performance & Caching
CACHE_TTL=3600
MAX_CONCURRENT_USERS=10000
NEXT_TELEMETRY_DISABLED=1

# Security
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000
SESSION_SECRET=your_session_secret_here

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,audio/mpeg,audio/wav

# Feature Flags
ENABLE_REAL_TIME_CHAT=true
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_SOCIAL_SHARING=true
ENABLE_HEALTH_MONITORING=true

# Optional: Redis for caching (uncomment if using)
# REDIS_URL=redis://localhost:6379

# Optional: Email service (uncomment and configure)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# SMTP_FROM=noreply@tourify.live

# Optional: Analytics (uncomment and configure)
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# SENTRY_DSN=your_sentry_dsn

# Optional: Webhook alerts (uncomment and configure)
# WEBHOOK_ERROR_ALERTS=your_slack_webhook_url
