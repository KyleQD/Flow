# Tourify Demo Environment Configuration
# =====================================

# Core Application
NODE_ENV=production
NEXT_PUBLIC_SITE_URL=https://demo.tourify.live
DOMAIN=https://demo.tourify.live
PORT=3000

# Supabase Configuration (your existing setup)
NEXT_PUBLIC_SUPABASE_URL=https://auqddrodjezjlypkzfpi.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Authentication
NEXTAUTH_URL=https://demo.tourify.live
NEXTAUTH_SECRET=your_nextauth_secret_here

# Demo Mode Configuration
NEXT_PUBLIC_DEMO_MODE=true
NEXT_PUBLIC_DEMO_DATA_ENABLED=true
NEXT_PUBLIC_DEMO_BANNER_ENABLED=true

# Performance & Caching
CACHE_TTL=1800
MAX_CONCURRENT_USERS=5000
NEXT_TELEMETRY_DISABLED=1

# Security
RATE_LIMIT_REQUESTS_PER_MINUTE=50
RATE_LIMIT_REQUESTS_PER_HOUR=500
SESSION_SECRET=your_session_secret_here

# File Upload Configuration (limited for demo)
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Feature Flags (demo-optimized)
ENABLE_REAL_TIME_CHAT=true
ENABLE_AI_RECOMMENDATIONS=false
ENABLE_SOCIAL_SHARING=true
ENABLE_HEALTH_MONITORING=true
ENABLE_DEMO_TOUR=true
ENABLE_DEMO_RESET=true

# Demo-specific settings
DEMO_SESSION_TIMEOUT=3600
DEMO_MAX_PROFILES=50
DEMO_MAX_POSTS=100
DEMO_MAX_EVENTS=20

# Optional: Redis for caching (uncomment if using)
# REDIS_URL=redis://localhost:6379

# Optional: Analytics (demo tracking)
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# DEMO_ANALYTICS_ENABLED=true
